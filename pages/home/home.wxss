page{
  height: 100%;
}

.myContainer{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.nav{
  height: 44px;
}

.nav ul{
  display: flex;
}

.nav ul li{
  flex: 1;
  text-align: center;
  height: 44px;
  line-height: 44px;
  box-sizing: border-box;/*加了就不需要margin-top了*/
}

.nav ul li.active{
  color: #14c145;
  border-bottom: 2px solid #14c145;
}

.content{
  flex: 1;
  /*margin-top: 1px;*/
}

.content swiper{
  height: 100%;
}

swiper-item ul{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-right: 10px;
}

swiper-item scroll-view{
  height: 100%;
}

swiper-item ul li{
  width: 50%;
  box-sizing: border-box;
  padding-left: 10px;
}

swiper-item ul li image{
  width: 100%;
  height: 150px;/*image标签不会自动缩放*/
}